<% include ./partials/header %>

    <div class="ui main text container segment">
        <div class="ui huge header">Edit Blog</div>
        <form class="ui form" action="/blogs/:" method="POST">
            <div class="field">
                <strong><lable>Title</lable></strong>
                <input type="text" name="blog[title]" placeholder="Blog Post Title">
            </div>
            <div class="field">
                <img class="ui centred rounded image" src="<%= blog.image %>">
                <strong><lable>Image</lable></strong>
                <input type="text" name="blog[image]" placeholder="Insert a New Image URL Here">
            </div>
            <div class="field">
                <strong><lable>Blog Post</lable></strong>
                <textarea name="blog[body]" placeholder="This is what happened to me today..."></textarea>
            </div>
            <div class="field">
                <input  class="ui orange big basic button" type="submit">
            </div>
        </form>
    </div>
<% include ./partials/footer %>