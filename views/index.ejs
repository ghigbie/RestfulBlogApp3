<% include ./partials/header %>

<div class="ui main text container segment">
    <h1>Blog of Buldogs!!!</h1>
    <% blogs.forEach(function(blog){ %>
        <div>
            <h2> <%=blog.title%> </h2>
            <img src="<%= blog.image %>" >
            <div>
                <span> <%= blog.created %> </span>
            </div>
            <p> <%= blog.body %> </p>
            <a class="ui red big basic button" href="/blogs/<%= blog._id %>">Read More</a>
        </div>
    <% }); %>
</div>

<% include ./partials/footer %>